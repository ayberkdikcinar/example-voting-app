pipeline{
    
    agent none
    tools{
       nodejs 'NodeJs 16.2.0'
    }
    stages{
        stage('build'){
            agent any
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'build is running'
                dir('result'){
                    sh 'npm install'
                }
            
            }
        }
        stage('test'){
            agent any
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'test is running'
                dir('result'){
                    sh 'npm install'
                    sh 'npm test'
                }
            
            }
        }
        stage('docker-package'){
            agent any
            when{
                changeset "**/result/**"
            }
            steps{
                script{
                    docker.withRegistry('https://index.docker.io/v1/','dockercred'){
                        def resultImage = docker.build("test12481248xenon/result:v${env.BUILD_ID}","./result")
                        resultImage.push()
                        resultImage.push("${env.BRANCH_NAME}")
                    }
                }   
            }
        }
    }

    post{
        always{
            echo 'build is completed..'
        }
    }
}